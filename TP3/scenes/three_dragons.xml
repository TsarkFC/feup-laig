<lsf>
    <initials>
        <reference length="10" />
        <root id="ground" />
    </initials>
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="demoOrtho" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="5" y="0" z="10" />
            <to x="5" y="0" z="0" />
            <up x="0" y="1" z="0" />
        </ortho>
    </views>

    <illumination>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />          
        <background r="0.1" g="0.7" b="1.0" a="1.0" />    
    </illumination>


    <lights>
        <light id="defaultLight">            
            <enable value="1" />
            <position x="10" y="12" z="9.5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />                   
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />            
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            
        </light>
    </lights>


    <textures>
        <texture id="gameBoard" path="./scenes/images/board.jpg" />
    </textures>


    <materials>
        <material id="defaultMaterial">
            <shininess value="ff" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="woodMaterial"><!-- TODO -->
            <shininess value="ff" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <spritesheets></spritesheets>

    <animations>
        <animation id="animation" >
                <keyframe instant="0">

                    <translation x="1" y="1" z="1" />
                    <rotation axis="x" angle="25" />
                    <rotation axis="y" angle="0" />
                    <rotation axis="z" angle="0" />
                    <scale sx="1" sy="1" sz="1" />
                </keyframe>

                <keyframe instant="2">

                    <translation x="1" y="1" z="1" />
                    <rotation axis="x" angle="25" />
                    <rotation axis="y" angle="0" />
                    <rotation axis="z" angle="0" />
                    <scale sx="1" sy="1" sz="1" />
                </keyframe>
        </animation>

        <animation id="test" >
                <keyframe instant="0">

                    <translation x="1" y="1" z="1" />
                    <rotation axis="x" angle="25" />
                    <rotation axis="y" angle="0" />
                    <rotation axis="z" angle="0" />
                    <scale sx="1" sy="1" sz="1" />
                </keyframe>

                <keyframe instant="2">

                    <translation x="1" y="1" z="1" />
                    <rotation axis="x" angle="25" />
                    <rotation axis="y" angle="0" />
                    <rotation axis="z" angle="0" />
                    <scale sx="1" sy="1" sz="1" />
                </keyframe>
        </animation>
    </animations>

    <nodes>
        <node id="ground">            
            <material id="defaultMaterial" />

            <texture id="demoTexture">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            
            <transformations>
                <translation x="0" y="1.0" z="1.0" />
                <rotation axis="yy" angle="45" />
                <scale sx="2" sy="1" sz="1" />
            </transformations>

            
            <descendants>
                <noderef id="gameBoard" />
                <leaf type="plane" x1="0" y1="1" x2="1" y2="0" />
            </descendants>
        </node>
        <node id="gameBoard">       
            <material id="woodMaterial" />

            <texture id="gameBoard">
                <amplification afs="9" aft="9" />
            </texture>

            <transformations>
                <translation x="2" y="0.0" z="2.0" />
                <scale sx="9" sy="1" sz="9" />
            </transformations>

            <animationref id="animation" />

            <descendants>
                <leaf type="plane" npartsU="60" npartsV="60" />
            </descendants>
        </node>
    </nodes>
</lsf>
