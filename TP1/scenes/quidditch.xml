        </node>
        <node id="towerCeilingPole">
            <material id="null" />

            <texture id="null">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <descendants>
                <leaf type="cylinder" height="ff" topRadius="ff" bottomRadius="ff" stacks="ii" slices="ii"/>
            </descendants>
        </node>
        <node id="towerCeilingBanner">
            <material id="null" />

            <texture id="null">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <descendants>
                <noderef id="banner1" />
                <noderef id="banner2" />
            </descendants>
        </node>
        <node id="banner1">
