        </node>
        <node id="towerCeilingTraingle1">
            <material id="null" />

            <texture id="null">
                <amplification afs="2.0" aft="2.0" />
            </texture>

            <descendants>
                <leaf type="triangle" x1="ff" y1="ff" x2="ff" y2="ff" x3="ff" y3="ff" />
